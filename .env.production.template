# Database password (used by PostgreSQL container)
DB_PASSWORD=change-me-to-a-strong-password

# Database connection string (must match DB_PASSWORD above)
# Use "db" as hostname when running with docker-compose
DATABASE_URL=postgresql://racktar:change-me-to-a-strong-password@db:5432/racktar

# NextAuth secret (generate with: openssl rand -base64 32)
AUTH_SECRET=change-me-generate-with-openssl

# AuthSCH OAuth credentials (from https://auth.sch.bme.hu developer console)
AUTHSCH_CLIENT_ID=your-client-id
AUTHSCH_CLIENT_SECRET=your-client-secret

# Public URL of your application
NEXTAUTH_URL=https://racktar.yourdomain.com
